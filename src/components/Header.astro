---
const links = [
	{
		name: "About",
		url: "/about",
		style: "bg-orange-500/70 backdrop-blur-md",
	},
	{
		name: "Works",
		url: "/works",
		style: "bg-cyan-500/70 backdrop-blur-md",
	},
	{
		name: "Articles",
		url: "/articles",
		style: "bg-green-500/70 backdrop-blur-md",
	},
]

const currentPath = new URL(Astro.request.url).pathname
---

<header class="block pt-4">
	<div class="mx-auto max-w-[70ch] px-3 md:px-0">
		<a
			class="inline-grid grid-cols-headerBox grid-flow-row bg-text border-[3px] border-black rounded-lg rounded-br-none rounded-tr-[48px] gap-[3px]"
			href="/"
		>
			<span
				class="col-span-1 row-span-2 block h-full w-full bg-primary border-text rounded-md"
			></span>
			<h1
				class="block bg-white text-3xl pl-4 py-2 pb-4 rounded-md rounded-tr-[45px] rounded-r-none font-bold"
			>
				Andrea<br />Franchini
			</h1>
			<span
				class="block bg-secondary text-xl pl-4 py-2 pr-8 rounded-md rounded-r-none uppercase italic"
				>Software Engineer</span
			>
		</a>
	</div>
</header>
<nav
	class="sticky top-0 block py-3 mb-6 before:absolute before:top-0 before:block before:left-0 before:w-full before:h-1/2 before:box-border before:backdrop-blur-md before:border-b-[3px] before:border-text before:-z-10"
>
	<ul class="space-x-3 mx-auto max-w-[70ch] px-3 md:px-0">
		{
			links.map((item) => (
				<li class="inline-block">
					<a
						class={`block md:min-w-[12ch] relative text-center font-bold text-lg md:text-xl px-5 py-2 rounded-full overflow-hidden before:transition  before:absolute before:hover:border-[3px] before:hover:border-text border-text border-[3px] before:top-[3px] before:bottom-[3px] before:left-[3px] before:right-[3px] before:rounded-full ${
							item.style
						} 
						${
							item.url === currentPath
								? ` before:border-[3px] before:border-text  `
								: ` before:border-[3px] before:border-transparent  before:scale-125 before:hover:scale-100`
						}`}
						href={item.url}
					>
						{item.name}
					</a>
				</li>
			))
		}
	</ul>
</nav>
