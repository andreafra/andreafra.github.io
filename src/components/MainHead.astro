---
import "../styles/global.scss";
const { title = "Andrea Franchini", description = "Andrea Franchini is a student in Computer Science and Engineering at the Polytechnic University of Milan" } = Astro.props;
---
<title>{title}</title>

<!-- Meta -->
<meta charset="UTF-8" />
<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width" />

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital@0;1&family=Space+Grotesk:wght@400;700&display=swap" rel="stylesheet"> 
