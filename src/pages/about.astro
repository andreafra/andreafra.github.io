---
import Layout from "@layouts/Layout.astro"
import { Picture } from "@astrojs/image/components"
import pfp from "@assets/pfp.jpg"
import { Content as AboutContent } from "@assets/about.mdx"
---

<Layout title="Andrea Franchini | About">
    <header>
        <div class="pt-12 px-2 md:px-8 text-clamp/[1.2]">
            <h1 class="text-accent">
                <a href="/">Andrea Franchini</a><br />
                <b>About me</b>
            </h1>
        </div>
    </header>
    <main class="pt-6 px-2 md:px-8 grid grid-cols-1 md:grid-cols-3 gap-6">
        <section class="about text-2xl/normal max-w-[70ch] col-span-2">
            <AboutContent />
        </section>
        <section>
            <Picture
                src={pfp}
                alt="portrait of Andrea, wearing a nice shirt."
                widths={[200, 400, 800]}
                aspectRatio="1:1"
                class="rounded-3xl shadow-lg"
            />
        </section>
    </main>
</Layout>
<style is:global>
    .about > a {
        text-decoration: underline;
    }
    .about > p {
        margin-bottom: 1rem;
    }
    .about > ul {
        list-style: circle;
        padding-left: 2rem;
    }
    .about > h2 {
        font-weight: bolder;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
    }
</style>
